{% extends 'base.html.twig' %}

{% block title %}Mascota{% endblock %}

{% block body %}
    <h1>Mascota</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Edad</th>
                <th>Raza</th>
                <th>Fecha</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mascotum in mascotas %}
            <tr>
                <td>{{ mascotum.id }}</td>
                <td>{{ mascotum.nombre }}</td>
                <td>{{ mascotum.edad }}</td>
                <td>{{ mascotum.raza }}</td>
                <td>{{ mascotum.fecha ? mascotum.fecha|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_mascota_show', {'id': mascotum.id}) }}">show</a>
                    <a href="{{ path('app_mascota_edit', {'id': mascotum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mascota_new') }}">Create new</a>

    <h2>Mascotas ordenadas por edad de más mayor a mas joven</h2>
    <ul>
        {% for mascotum in mascotas2 %}
        <li>{{ mascotum.nombre }} {{ mascotum.edad }} años</li>
        {% endfor %}
    </ul>

    <h2>Mascotas</h2>
    <ul>
        {% for mascotum in mascotas %}
        <li>{{ mascotum.nombre }}</li>
        {% endfor %}
    </ul>
{% endblock %}
